<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/edit.css">
</head>
<body>
  <header>
    <h1>Recipe App</h1>
  </header>
  <div class="content">
    <aside>

    </aside>
    <main>
      <nav>
        <h1><%=recipes.name%></h1>
        <div class="buttons-home">
          <button onclick="window.location.href='/'">Home</button>
          <button onclick="window.location.href='/recipe/'"> View Recipes</button>
        </div>
      </nav>
      <article>
        <div class="recipe-full">
          <img class="recipe-image" src=<%=recipes.img %>>
          <div class="recipe-description"><%=recipes.description%></div>
          <div class="recipe-description"><%=recipes.ingredients%></div>
          <div class="recipe-description"><%=recipes.instructions%></div>
          <div class="recipe-description"><%=recipes.time%></div>
          <div class="recipe-created"><%=recipes.createdAt%></div>
          <div class="recipe-author"><%=recipes.author%></div>
          <div class="recipe-buttons">
            <button onclick="window.location.href='/recipe/edit/<%=recipes._id%>'">
              Edit Recipe
            </button>
            <form style="display:inline-block" onsubmit="deleteRecipe(event, '<%=recipes._id%>')">
              <button type="submit">Delete</button>
            </form>
            <script>
              function deleteRecipe(event, recipeId) {
                event.preventDefault(); // Prevent form from submitting normally
                
                // Send DELETE request using fetch API
                fetch(`/recipe/delete/${recipeId}`, {
                  method: 'DELETE', // Use DELETE method for this request
                })
                .then(response => {
                  if (response.ok) {
                    // On success, reload the page to reflect the changes
                    window.location.reload();  // Reload page to update the recipe list
                  } else {
                    console.error('Failed to delete recipe.');
                  }
                })
                .catch(error => console.error('Error deleting recipe:', error));
              }
            </script>
          </div>
        </div>    
      </article>
    </main>
  </div>
</body>
</html>